<Window x:Class="multigame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:multigame" xmlns:viewmodel="clr-namespace:multigame.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="169*"></RowDefinition>
            <RowDefinition Height="265*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1"
           Grid.Row="1"
           Grid.ColumnSpan="2"
           Grid.RowSpan="2"
           Text="{Binding ServerMessage}"
           />
        <Button Grid.Column="0" 
                Margin="58,112,59,12"
                Content="Connect"
                Command="{Binding ConnectToServerCommand}"
                />
    </Grid>
</Window>
